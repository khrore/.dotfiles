{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "formatter": {
    "rustfmt": {
      "command": [
        "rustfmt",
        "--edition",
        "2024",
        "$FILE"
      ],
      "extensions": [
        ".rs"
      ]
    }
  },
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "basedpyright": {
      "command": [
        "ruff",
        "server"
      ],
      "extensions": [
        ".py",
        ".pyi"
      ]
    }
  },
}
